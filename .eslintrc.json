{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "next/core-web-vitals",
        "next/typescript",
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react", "prettier", "@typescript-eslint"],
    "rules": {
        "no-console": "warn",
        "no-unused-vars": "warn",
        "react/prop-types": "off",
        "eqeqeq": ["error", "always"],
        "prettier/prettier": "error"
    },
    "ignorePatterns": ["node_modules/", "dist/"]
}
